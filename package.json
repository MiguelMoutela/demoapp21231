{
  "name": "ng-universal",
  "version": "0.0.0",
  "scripts": {
    "sb-start": "git config --global user.email $GIT_AUTHOR_EMAIL && git config --global user.name $GIT_AUTHOR_EMAIL && yarn build:watch & npx ng serve --port 3000 --host 0.0.0.0 --disable-host-check --progress false",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:watch": "npx ng build ng-universal --watch true --progress false",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "nestjs": "npm run nestjs:browser && npm run nestjs:server && npm run nestjs:nest",
    "nestjs:browser": "ng build ng-universal --prod",
    "nestjs:server": "ng run ng-universal:server:production",
    "nestjs:nest": "webpack --config webpack.config.js --progress --colors",
    "nestjs:serve": "ng dist/server",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:ssr": "node dist/server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "build:client-and-server-bundles": "ng build --prod && ng run ng-universal:server:production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.10",
    "@angular/common": "~7.2.10",
    "@angular/compiler": "~7.2.10",
    "@angular/core": "~7.2.10",
    "@angular/forms": "~7.2.10",
    "@angular/http": "^7.2.12",
    "@angular/platform-browser": "~7.2.10",
    "@angular/platform-browser-dynamic": "~7.2.10",
    "@angular/platform-server": "~7.2.10",
    "@angular/router": "~7.2.10",
    "@nestjs/common": "^6.0.5",
    "@nestjs/core": "^6.0.5",
    "@nestjs/ng-universal": "^0.5.1",
    "@nguniversal/express-engine": "0.0.0",
    "@nguniversal/module-map-ngfactory-loader": "0.0.0",
    "core-js": "^2.5.4",
    "express": "^4.15.2",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0-beta.7",
    "@angular/cli": "~7.3.6",
    "@angular/compiler-cli": "~7.2.10",
    "@angular/language-service": "~7.2.10",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-loader": "^5.2.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.13.1",
    "typescript": "3.1.1",
    "webpack-cli": "^3.1.0"
  }
}
